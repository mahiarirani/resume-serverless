<section class="p-7 inline-grid w-full bg-white rounded-xl shadow">
  <h2 class="font-semibold text-xl mb-5">Languages</h2>
  <div class="space-y-2">
    {% for language in information.languages %}
      <div class="flex justify-between">
        <div class="text-gray-600 font-medium">{{ language.name }}</div>
        <div class="text-gray-500 text-right">{{ language.level }}</div>
      </div>
    {% endfor %}
  </div>
</section>