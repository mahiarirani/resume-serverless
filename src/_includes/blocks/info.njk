<section class="p-7 inline-grid w-full bg-white rounded-xl shadow">
  <h2 class="font-semibold text-xl mb-5">Information</h2>
  <div class="space-y-2">
    <div class="flex justify-between">
      <div class="text-gray-600 font-medium">Location</div>
      <div class="text-right text-gray-500">{{ information.location }}</div>
    </div>
    <div class="flex justify-between">
      <div class="text-gray-600 font-medium">Experience</div>
      <div class="text-right text-gray-500">{{ information.experience }}</div>
    </div>
    <div class="flex justify-between">
      <div class="text-gray-600 font-medium">Availability</div>
      <div class="text-right text-gray-500">{{ information.availability }}</div>
    </div>
    <div class="flex justify-between">
      <div class="text-gray-600 font-medium">Relocation</div>
      <div class="text-right text-gray-500">{{ "Yes" if information.relocation else "No" }}</div>
    </div>
    <div class="flex justify-between">
      <div class="text-gray-600 font-medium">Remote</div>
      <div class="text-right text-gray-500">{{ "Yes" if information.remote else "No" }}</div>
    </div>
  </div>
</section>